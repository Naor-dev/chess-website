# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/chess_db

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# BFF Exchange Secret (MUST match frontend BFF_EXCHANGE_SECRET)
# Used to authenticate server-to-server requests from the frontend BFF
BFF_EXCHANGE_SECRET=your-secure-random-secret-here

# CORS
CORS_ORIGIN=http://localhost:3000

# Sentry (optional in dev, required in production)
SENTRY_DSN=
