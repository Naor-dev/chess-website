generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(uuid())
  googleId     String   @unique @map("google_id")
  email        String   @unique
  displayName  String   @map("display_name")
  tokenVersion Int      @default(1) @map("token_version")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  games Game[]

  @@map("users")
}

model Game {
  id              String     @id @default(uuid())
  userId          String     @map("user_id")
  status          GameStatus @default(ACTIVE)
  difficultyLevel Int        @map("difficulty_level")
  timeControlType String     @map("time_control_type")
  currentFen      String     @map("current_fen")
  movesHistory    String[]   @map("moves_history")
  timeLeftUser    Int        @map("time_left_user")
  timeLeftEngine  Int        @map("time_left_engine")
  turnStartedAt   DateTime?  @map("turn_started_at")
  result          String?
  version         Int        @default(1) // Optimistic locking for concurrent modification detection
  createdAt       DateTime   @default(now()) @map("created_at")
  updatedAt       DateTime   @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id])

  // Performance indexes for common queries
  @@index([userId])            // For: findByUserId, listGames
  @@index([status])            // For: listGames with status filter
  @@index([userId, status])    // For: listActiveGames, compound queries
  @@index([updatedAt])         // For: ORDER BY updatedAt DESC (history sorting)
  @@map("games")
}

enum GameStatus {
  ACTIVE
  FINISHED
  ABANDONED
}
